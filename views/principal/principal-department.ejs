<!DOCTYPE html>
<html lang="en">
  <head>
        <%- include('../includes/principal-head' , {title : 'All Departments'})%>

    <link rel="stylesheet" href="/styles/principal/principledepartment.css" />
  </head>
  <body>
    <div class="main">
      <%- include('../includes/principal-aside') %>
      <div class="main-content">
        <%- include('../includes/principal-header', { title: 'Departments' ,
        subTitle: 'Departments in Organization' }) %>
        <div class="container">
          <div class="tablecontent">
            <table>
              <tr>
                <th>Sr.No.</th>
                <th>Department Name</th>
                <th>HOD Name</th>
                <th>Contact No.</th>
                <th>Email</th>
              
              </tr>
              <% departments.forEach((department, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= department.name %></td>
                <td><%= department.members[0].firstname %> <%= department.members[0].lastname %></td>
                <td><%= department.members[0].phonenumber %></td>
                <td><%= department.members[0].email %></td>
              </tr>
              <% }) %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
