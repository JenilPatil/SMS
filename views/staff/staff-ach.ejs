<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/staff-head', { title : "Achievements"}) %>
    <link rel="stylesheet" href="/styles/staff/employee-ach.css" />
  </head>

  <body>
    <div class="main">
      <%- include('../includes/staff-aside') %>
      <div class="main-content">
        <%- include('../includes/staff-header', { title: 'Your Achievements', subTitle: '' }) %>

        <% staffAchievements.forEach(achievement => { %>
          <!-- Render staff member's own achievements -->
          <div class="Achievement">
            <div class="Ach-img">
              <img src="/achievement/<%= achievement.certificate %>" />
            </div>
            <div class="Ach-p">
              <p>Name:  <%= achievement.name %></p>
              <p>Title:  <%= achievement.title %></p>
               <p>Date:  <%= achievement.date %></p>
              <p>Description:  <%= achievement.description %></p>
            </div>
          </div>
        <% }) %>

        <% otherAchievements.forEach(achievement => { %>
          <!-- Render achievements of other staff members -->
          <div class="Achievement">
            <div class="Ach-img">
              <img src="/achievement/<%= achievement.certificate %>" />
            </div>
            <div class="Ach-p">
              <p>Name: <%= achievement.name %></p>
              <p>Title: <%= achievement.title %></p>
               <p>Date: <%= achievement.date %></p>
              <p>Description: <%= achievement.description %></p>
          </div>
        <% }) %>

        <div class="leavebtn">
          <a href="staff-achadd">Add Your Achievement</a>
        </div>
      </div>
    </div>
  </body>
</html>
