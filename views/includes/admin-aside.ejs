    <script>
    // Get all links with class "content"
    var links = document.querySelectorAll('.content a');
    // Get the link within div class "para1"
    var para1Link = document.querySelector('.para1 a');

    // Function to remove blue color from all links and their corresponding <i> tags
    function removeBlueColor() {
        links.forEach(function(link) {
            link.style.color = '';
            link.previousElementSibling.style.color = '';
        });
        para1Link.style.color = '';
        para1Link.previousElementSibling.style.color = '';
    }

    // Loop through each link
    links.forEach(function(link) {
        // Add click event listener to each link
        link.addEventListener('click', function() {
            // Remove blue color from all links and their corresponding <i> tags
            removeBlueColor();
            // Add blue color to the clicked link and its corresponding <i> tag
            this.style.color = 'cornflowerblue';
            this.previousElementSibling.style.color = 'cornflowerblue';
        });

        // Check if the link is the currently active page
        if (link.href === window.location.href) {
            link.style.color = 'cornflowerblue'; // Apply blue color if it's active
            // Set the color of the corresponding <i> tag to match the <a> tag
            link.previousElementSibling.style.color = 'cornflowerblue';
        }
    });

    // Check if the link within div class "para1" is the currently active page
    if (para1Link.href === window.location.href) {
        para1Link.style.color = 'cornflowerblue'; // Apply blue color if it's active
        // Set the color of the corresponding <i> tag to match the <a> tag
        para1Link.previousElementSibling.style.color = 'cornflowerblue';
    } else {
        para1Link.addEventListener('click', function() {
            // Remove blue color from all links and their corresponding <i> tags
            removeBlueColor();
            // Add blue color to the clicked link and its corresponding <i> tag
            this.style.color = 'cornflowerblue';
            this.previousElementSibling.style.color = 'cornflowerblue';
        });
    }
</script>