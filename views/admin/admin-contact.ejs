<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/admin-head', { title: "Contacts" }) %>
    <link rel="stylesheet" href="/styles/admin/AdminContact.css">
</head>

<body>
    <div class="main">
        <%- include('../includes/admin-aside') %>
        <div class="main-content">
            <%- include('../includes/admin-header', { title: 'Contact', subTitle: 'List of Contacts' }) %>
            <div class="container">
                <div class="tablecontent">
                    <table>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Emergency Number</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>Role</th>
                        </tr>
                        <% allUsers.forEach(function(user, index) { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= user.firstname %> <%= user.lastname %></td>
                                <td><%= user.emgnumber %></td>
                                <td><%= user.phonenumber %></td>
                                <td><%= user.email %></td>
                                <td><%= user.address.Houseno %> <%= user.address.Society %></td>
                                <td><%= user.address.city %></td>
                                <td><%= user.role %></td>
                            </tr>
                        <% }) %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
