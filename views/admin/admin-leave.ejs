<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/admin-head',{ title : "Admin Leave"}) %>
    <link rel="stylesheet" href="/styles/admin/AdminLeave.css" />
  </head>
  <body>
    <div class="main">
      <%- include('../includes/admin-aside') %>
      <div class="main-content">
        <%- include('../includes/admin-header', { title: 'Leave Management' ,
        subTitle: 'Managing Leave' }) %>
        <div class="container">
          <div class="tablecontent">
            <table>
              <tr>
                <th>No</th>
                <th>Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Title</th>
                <th>Status</th>
              </tr>
              <% leaveRequests.forEach((request,index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td>
                  <%= request.userEmail.firstname %> <%=
                  request.userEmail.lastname %>
                </td>
                <td><%= request.fromDate %></td>
                <td><%= request.toDate %></td>
                <td><%= request.title %></td>
                <td>
                  <%= request.status %> 
                </td>
              </tr>
              <% }) %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
