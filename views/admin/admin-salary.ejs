<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/admin-head', { title : 'Admin Salary'}) %>
    <link rel="stylesheet" href="/styles/admin/AdminSalary.css">
</head>
<body>
    <div class="main">
        <%- include('../includes/admin-aside') %>
        <div class="main-content">
            <%- include('../includes/admin-header', { title: 'Staff Salary', subTitle: 'Managing Staff Salary' }) %>
            <div class="container">
                <div class="tablecontent">
                    <table>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Department</th>
                            <th>Basic Salary</th>
                            <th>AGP</th>
                            <th>DA</th>
                            <th>HRA</th>
                            <th>Other</th>
                            <th>Total Salary</th>
                        </tr>
                        <% users.forEach((user, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= user.name %></td>
                            <td><%= user.role %></td>
                            <td><%= user.department %></td>
                            <td><%= user.salary %></td>
                            <td><%= user.AGP %></td>
                            <td><%= user.DA %></td>
                            <td><%= user.HRA %></td>
                            <td><%= user.otherSalary %></td>
                            <td><%= user.totalSalary %></td>
                        </tr>
                        <% }) %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
