<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/admin-head',{ title : "Achievements"})%>
    <link rel="stylesheet" href="/styles/admin/AdminAchievement.css">
</head>
<body>
    <div class="main">
        <%- include('../includes/admin-aside') %>
        <div class="main-content">
            <%- include('../includes/admin-header', { title: 'Achievements of Staff' , subTitle: '' }) %>
            <div class="content-container">
                <div class="container">
                    <div class="tablecontent">
                        <table>
                            <tr>
                                <th>ID</th>
                                <th>NAME</th>
                                <TH>Achievement Date</TH>
                                <th>Achievement Title</th>
                                <th>Description</th>
                                <TH>Certificate</th>
                            </tr>
                            <% achievements.forEach((achievement, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= achievement.name %></td>
                                <td><%= achievement.date %></td>
                                <td><%= achievement.title %></td>
                                <td><%= achievement.description %></td>
                                <td> <img style="height: 300px; width: 300px;" src="/achievement/<%= achievement.certificate %>"></td>
                            </tr>
                            <% }) %>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
